<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp"
    android:weightSum="1"
    android:gravity="bottom"
    android:padding="5dp"
    android:id="@+id/imagem_prato"
    android:background="@drawable/pamonha">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#80FFFFFF"
        android:id="@+id/info_prato">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pamonha Diet"
            android:singleLine="true"
            android:textStyle="bold"
            android:id="@+id/txt_nome_prato"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="R$ 12,90"
            android:id="@+id/txt_preco_prato"
            android:singleLine="true"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_alignTop="@+id/txt_nome_prato"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>